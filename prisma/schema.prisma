generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Radios {
  id                Int         @id @default(autoincrement())
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  address           String
  email             String
  facebook          String
  frequency         String
  image             String
  link_deatils      String
  link_player       String
  listens           String
  long_description  String
  no_play           Boolean
  phone             String
  profile_slogan    String
  radio_language    String
  short_description String
  stars             Int
  title             String
  twitter           String
  website           String
  source            String      @default("")
  radio_id          String      @default("")
  state_id          String      @default("")
  shows             String      @default("")
  city              Cities[]    @relation("CitiesToRadios")
  country           Countries[] @relation("CountriesToRadios")
  genres            Genres[]    @relation("GenresToRadios")
  language          Languages[] @relation("LanguagesToRadios")
  region            Regions[]   @relation("RadiosToRegions")
  state             States[]    @relation("RadiosToStates")
}

model States {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("RadiosToStates")
}

model Genres {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("GenresToRadios")
}

model Cities {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("CitiesToRadios")
}

model Countries {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("CountriesToRadios")
}

model Languages {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("LanguagesToRadios")
}

model Regions {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  radios Radios[] @relation("RadiosToRegions")
}
